QUESTION 3
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char username[50], password[50];
    char loginUser[50], loginPass[50];
    int valid = 0;
    while (1) {
        printf("Enter a username (5 alphabets): ");
        scanf("%s", username);
        if (strlen(username) != 5) {
            printf("Username must be exactly 5 characters.\n");
            continue; 
        }
        valid = 1;
        for (int i = 0; i < 5; i++) {
            if (!isalpha(username[i])) {
                printf("? Username must only contain alphabets.\n");
                valid = 0;
                break; 
            }
        }
        if (valid) break; 
    }
    while (1) {
        int hasDigit = 0, hasUpper = 0, hasLower = 0;
        printf("Enter a password (6 chars, 1 digit, 1 upper, 1 lower): ");
        scanf("%s", password);
        if (strlen(password) != 6) {
            printf("? Password must be exactly 6 characters.\n");
            continue; 
        }
        for (int i = 0; i < 6; i++) {
            if (isdigit(password[i])) hasDigit = 1;
            else if (isupper(password[i])) hasUpper = 1;
            else if (islower(password[i])) hasLower = 1;
        }
        if (hasDigit && hasUpper && hasLower) {
            break; 
        } else {
            printf("? Password must contain at least 1 digit, 1 uppercase, and 1 lowercase.\n");
            continue;
        }
    }
    printf("\n? Account Created Successfully!\n");

    while (1) {
        printf("\n--- LOGIN ---\n");
        printf("Enter username: ");
        scanf("%s", loginUser);
        printf("Enter password: ");
        scanf("%s", loginPass);

        if (strcmp(username, loginUser) == 0 && strcmp(password, loginPass) == 0) {
            printf("\n Welcome %s, you are now logged in.\n", username);
            break; 
        } else {
            printf(" Invalid login. Try again.\n");
            continue; 
        }
    }

    return 0;
}
